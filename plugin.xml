<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="cordova-plugin-evam-sdk"
    version="0.0.1">

    <name>EvamSDK</name>
    <description>
        
    </description>
    <license>MIT</license>

    <engines>
        <!--
            Cordova 2.8.0 is all I have tested on - it should work fine with earlier versions.
            Please modify the below line, test, and submit a PR if it works for you.
        -->
        <engine name="cordova" version=">=3.0.0" />
    </engines>

    <js-module src="www/EvamSdkPlugin.js" name="evamsdk">
        <clobbers target="window.EvamSdk" />
    </js-module>
 

    <!-- android -->
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="EvamSDK">
                 <param name="onload" value="true" />
            </feature>
        </config-file>
        
        <source-file src="src/android/EvamSdk.java"   target-dir="src/org/apache/cordova/statusbar"/>
    </platform>

</plugin>
